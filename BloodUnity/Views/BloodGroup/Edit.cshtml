@model BloodUnity.Models.BloodGroupsMV

@{
    ViewBag.Title = "Blood Group";
}

<div class="col-md-6">
    <div class="contact-form-block">
        <h2 class="contact-title">Edit Blood Group</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BloodGroupID)

            <div class="form-group">

                Enter Blood Group
                @Html.EditorFor(model => model.BloodGroup, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" style="float:right;padding:5px 24px" value="Update" class="btn btn-theme" />
                @Html.ActionLink("Back", "AllBloodGroups", null, new { @class = "btn btn-theme-invert" })
            </div>
        }

    </div>
</div>